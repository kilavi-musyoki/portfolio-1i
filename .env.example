# EmailJS Configuration
VITE_EMAILJS_SERVICE_ID=YOUR_SERVICE_ID
VITE_EMAILJS_TEMPLATE_ID=YOUR_TEMPLATE_ID
VITE_EMAILJS_PUBLIC_KEY=YOUR_PUBLIC_KEY

# Contact delivery mode:
# - "emailjs" for GitHub Pages (static)
# - "api" for Vercel (uses /api/contact)
VITE_CONTACT_PROVIDER=api

# Optional: Vercel Analytics
VITE_UMAMI_WEBSITE_ID=YOUR_UMAMI_SITE_ID

# Optional: Cloudflare Turnstile for spam protection
VITE_TURNSTILE_SITE_KEY=YOUR_TURNSTILE_KEY

# CV download link mode:
# - "api" uses /api/track-download (needs serverless)
# - "direct" uses /assets/Kilavi_Musyoki_CV.pdf
VITE_CV_TRACKING=api

# Optional: Google Sheets webhook for CV download tracking
# GOOGLE_SHEETS_WEBHOOK=YOUR_SHEETS_WEBHOOK_URL

